div(ng-controller="patientListController")
    iv(class="row")
        div(class= "col-md-12")
            table(class="table table-hover table-striped")
                thead
                    tr
                    th Name
                    th E-Mail
                    th Geburtsdatum
                    tbody
                        tr(ng-repeat="patient in patients")
                            td {{patient.name}}
                            td {{patient.emailAddress}}
                            td {{patient.birthdate | date : 'dd.MM.yy'}}

script(src='/lib/bootstrap/dist/js/bootstrap.min.js')
script(src='lib/jquery/dist/jquery.min.js')
script(src='/lib/angular/angular.min.js')
script(src='/lib/angular-route/angular-route.min.js')
script(src='/app.js')
script(src='/controllers/patientListController.js')